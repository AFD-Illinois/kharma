# GRMHD Modes problem
# Try to propagate several analytically-amenable linear modes of the MHD equations

<comment>
problem = GRMHD Modes

<job>
problem_id = mhdmodes

<mesh>
refinement = none
numlevel = 1

nx1 = 16
x1min = 0.0
x1max = 1.0
ix1_bc = periodic
ox1_bc = periodic

nx2 = 16
x2min = 0.0
x2max = 1.0
ix2_bc = periodic
ox2_bc = periodic

nx3 = 16
x3min = 0.0
x3max = 1.0
ix3_bc = periodic
ox3_bc = periodic

<coordinates>
base = cartesian_minkowski
transform = null

<time>
# This will be overridden depending on the problem
tlim = 1.0
integrator = rk2
dt_min = 0.001

<GRMHD>
cfl = 0.9
gamma = 1.333333

<mhdmodes>
nmode = 1
dir = 0

<Graphics>
variables = c.c.bulk.prims

<output1>
file_type = hdf5
# This guarantees just beginning and end
dt = 5.0
variable = c.c.bulk.prims

