# Simplest Fishbone-Moncrief torus:
# No magnetic field, just let it spin

<parthenon/job>
problem_id = torus

<parthenon/mesh>
refinement = none
numlevel = 1

nx1 = 192
x1min = 0.4436
x1max = 4.0
ix1_bc = outflow
ox1_bc = outflow

nx2 = 192
x2min = 0.0
x2max = 1.0
ix2_bc = reflecting
ox2_bc = reflecting

nx3 = 192
x3min = 0.0
x3max = 6.283185307179586
ix3_bc = periodic
ox3_bc = periodic

#<parthenon/meshblock>
#nx1 = 64
#nx2 = 64
#nx3 = 64

<coordinates>
base = spherical_ks
transform = fmks
a = 0.9375
hslope = 0.3
mks_smooth = 0.5
poly_xt = 0.82
poly_alpha = 14.0

<parthenon/time>
tlim = 3.0
integrator = rk2
dt_min = 0.0001

<GRMHD>
cfl = 0.9
gamma = 1.333333
reconstruction = weno5
merge_reconstruction = true

<torus>
rin = 6.0
rmax = 12.0
u_jitter = 0.1
b_field_type = sane
beta_min = 100.

<parthenon/output0>
file_type = hdf5
dt = 1.0
variables = c.c.bulk.prims

