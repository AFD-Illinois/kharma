# Bondi flow problem
# Model a spherically symmetric, unmagnetized inflow

<comment>
problem = Bondi flow

<job>
problem_id = bondi

<mesh>
refinement = none
numlevel = 1

nx1 = 64
x1min = 0.9
x1max = 3.0
ix1_bc = outflow
ox1_bc = outflow

nx2 = 64
x2min = 0.0
x2max = 1.0
ix2_bc = reflecting
ox2_bc = reflecting

nx3 = 64
x3min = 0.0
x3max = 6.283185307179586
ix3_bc = periodic
ox3_bc = periodic

<coordinates>
base = spherical_ks
transform = fmks
a = 0.0
hslope = 0.3

<time>
tlim = 5.0
integrator = rk2
dt_min = 0.0001

<GRMHD>
cfl = 0.7
gamma = 1.666667

<bondi>
mdot = 1.0
rs = 8.0

<Graphics>
variables = c.c.bulk.prims

<output1>
file_type = hdf5
dt = 0.5
variable = c.c.bulk.prims

