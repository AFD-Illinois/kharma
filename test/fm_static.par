# Simplest Fishbone-Moncrief torus:
# No magnetic field, just let it spin

<parthenon/job>
problem_id = torus

<parthenon/mesh>
refinement = none
numlevel = 1

nx1 = 96
x1min = 0.4436
x1max = 4.0
ix1_bc = outflow
ox1_bc = outflow

nx2 = 64
x2min = 0.0
x2max = 1.0
ix2_bc = reflecting
ox2_bc = reflecting

nx3 = 64
x3min = 0.0
x3max = 6.283185307179586
ix3_bc = periodic
ox3_bc = periodic

<coordinates>
base = spherical_ks
transform = null
a = 0.0
hslope = 0.3

<parthenon/time>
tlim = 500.0
integrator = rk2
dt_min = 0.0001

<GRMHD>
cfl = 0.7
gamma = 1.333333

<torus>
rin = 6.0
rmax = 12.0
u_jitter = 0.0
b_field_type = none


<parthenon/output0>
file_type = hdf5
dt = 10.0
variables = c.c.bulk.prims,f.f.bulk.ctop

