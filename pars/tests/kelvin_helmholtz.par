# Kelvin-Helmholtz instability
# Basic K-H problem, usually used to test AMR
# since it gets refined in predictable places
# See pars/smr/kelvin_helmholtz*, pars/amr/kelvin_helmholtz*

<parthenon/job>
problem_id = kelvin_helmholtz

<parthenon/mesh>
nx1 = 128
x1min = 0.0
x1max = 1.0

nx2 = 192
x2min = 0.0
x2max = 2.0

nx3 = 1
x3min = -0.01
x3max = 0.01

<parthenon/meshblock>
nx1 = 64
nx2 = 64
nx3 = 1

<coordinates>
base = cartesian_minkowski
transform = null

<parthenon/time>
tlim = 200.0
integrator = rk2

<kelvin_helmholtz>
tscale = 0.01
added_b = 1

<perturbation>
u_jitter = 0.01

<driver>
type = kharma

<GRMHD>
cfl = 0.9
gamma = 1.666667

<flux>
type = llf
reconstruction = linear_mc

<b_field>
solver = none

<debug>
verbose = 1
flag_verbose = 0
extra_checks = 0

<parthenon/output0>
file_type = hdf5
dt = 0.1
variables = prims, divB

