# GRMHD Modes problem
# Try to propagate several analytically-amenable linear modes of the MHD equations

<parthenon/job>
problem_id = shock

<parthenon/mesh>
nx1 = 400
x1min = -2.0
x1max = 2.0

nx2 = 1
x2min = 0.0
x2max = 1.0

nx3 = 1
x3min = 0.0
x3max = 1.0

<parthenon/meshblock>
nx1 = 400
nx2 = 1
nx3 = 1

<coordinates>
base = cartesian_minkowski
transform = null

<parthenon/time>
tlim = 1.22
integrator = rk2
dt_min = 0.0001

<GRMHD>
cfl = 0.5
gamma = 1.333333
reconstruction = linear_mc

<b_field>
solver = flux_ct

<shock>
rhoL = 1.
PL = 1.
u1L = 5.
u2L = 0.
u3L = 0.
B1L = 10.
B2L = 10.
B3L = 0.
rhoR = 1.
PR = 1.
u1R = -5.
u2R = 0.
u3R = 0.
B1R = 10.
B2R = -10.
B3R = 0.

<floors>
disable_floors = true

<parthenon/output0>
file_type = hdf5
# This is to output only the final state
dt = 100.
single_precision_output = true
variables = prims

<parthenon/output1>
file_type = hst
dt = 0.1

